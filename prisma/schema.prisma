// OpenQuiz / CodeCanvas - Prisma Schema
// Defines all models for the assessment platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("TEACHER") // TEACHER or ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  classrooms    Classroom[]
  quizzes       Quiz[]
  sessions      Session[]
  accounts      Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// CLASSROOM & STUDENTS
// ============================================

model Classroom {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  teacherId   String
  teacher     User      @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  students    Student[]
  assignments Assignment[]
}

model Student {
  id          String   @id @default(cuid())
  name        String
  accessId    String   @unique // Non-guessable unique ID for login
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  classroomId String
  classroom   Classroom   @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  submissions Submission[]
  cardProgress CardProgress[]
}

// ============================================
// QUIZZES & CONTENT
// ============================================

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // STANDARD, CODING, FLASHCARD
  content     String   // JSON content (questions, test cases, flashcards)
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  assignments Assignment[]
  disputes    Dispute[]
}

model Assignment {
  id          String   @id @default(cuid())
  deadline    DateTime?
  isOpen      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  quizId      String
  quiz        Quiz       @relation(fields: [quizId], references: [id], onDelete: Cascade)
  classroomId String
  classroom   Classroom  @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  submissions Submission[]
}

// ============================================
// SUBMISSIONS & SCORING
// ============================================

model Submission {
  id          String   @id @default(cuid())
  answers     String   // JSON: student answers or code
  score       Float?
  maxScore    Float?
  feedback    String?  // JSON: per-question feedback
  submittedAt DateTime @default(now())
  gradedAt    DateTime?

  // Relations
  studentId     String
  student       Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  assignmentId  String
  assignment    Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
}

// ============================================
// DISPUTES (Feedback System)
// ============================================

model Dispute {
  id          String   @id @default(cuid())
  questionIdx Int      // Which question is being disputed
  comment     String   // Student's explanation
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  resolution  String?  // Teacher's response
  createdAt   DateTime @default(now())
  resolvedAt  DateTime?

  // Relations
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

// ============================================
// SPACED REPETITION (Language Mode)
// ============================================

model CardProgress {
  id            String   @id @default(cuid())
  cardId        String   // Reference to a card in the quiz JSON
  stability     Float    @default(0.4)
  difficulty    Float    @default(0.3)
  elapsedDays   Int      @default(0)
  scheduledDays Int      @default(0)
  reps          Int      @default(0)
  lapses        Int      @default(0)
  state         Int      @default(0) // 0=New, 1=Learning, 2=Review, 3=Relearning
  dueDate       DateTime @default(now())
  lastReview    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  studentId     String
  student       Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, cardId])
}
